<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bianquan.springShop.dao.shop.UserDao">

    <!--通过手机号检索用户-->
    <select id="queryByMobile" resultType="com.bianquan.springShop.entity.shop.UserEntity">
        select * from sp_user where user_mobile = #{value}
    </select>

</mapper>