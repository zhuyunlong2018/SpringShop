<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bianquan.springShop.modules.shop.dao.ProductsSkuDao">

    <!-- 根据商品ID获取sku列表-->
    <select id="fetchListByProductId" resultMap="entityList">
        SELECT * from sp_products_sku WHERE product_id=#{id}
    </select>
    <resultMap id="entityList" type="com.bianquan.springShop.modules.shop.entity.ProductsSkuEntity">
        <result column="id" property="id" />
        <result column="product_id" property="productId" />
        <result column="description" property="description" />
        <result column="images" property="images" />
    </resultMap>

</mapper>