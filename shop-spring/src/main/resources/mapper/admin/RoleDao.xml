<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bianquan.springShop.modules.admin.dao.RoleDao">

    <!--通过管理员ID检索关联所有角色-->
    <select id="getRolesWithMenusByUserId" resultType="com.bianquan.springShop.modules.admin.entity.RoleEntity">
        SELECT id, name, description, permissions FROM
        sp_admin_role ar LEFT JOIN sp_roles r ON ar.role_id=r.id WHERE admin_id = #{userId}
    </select>

</mapper>