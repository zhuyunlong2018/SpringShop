<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bianquan.springShop.modules.shop.dao.ProductDao">

    <!--获取商品列表-->
    <select id="fetchList" resultMap="entityList">
        select * from sp_products
    </select>
    <resultMap id="entityList" type="com.bianquan.springShop.modules.shop.entity.ProductEntity">
        <id column="id" property="id" />
    </resultMap>

    <!--通过id获取商品关联所有信息-->
    <select id="fetchById" resultMap="managerProductEntity">
        SELECT
            p.id, p.title, p.sell_point, p.image, p.category_id, p.status, p.create_time, p.update_time,
            pd.product_desc,
            pa.param_data, pa.id, pa.product_id,pa.create_time, pa.update_time
        FROM
            sp_products p
        LEFT JOIN sp_product_desc pd ON p.id = pd.product_id
        LEFT JOIN sp_product_attributes pa ON p.id=pa.product_id
        WHERE
            p.id=#{id}
    </select>
    <resultMap id="managerProductEntity" type="com.bianquan.springShop.modules.shop.entity.ProductEntity">
        <id column="id" property="id" />
        <result property="title" column="title"/>
        <result property="sellPoint" column="sell_point"/>
        <result property="image" column="image"/>
        <result property="categoryId" column="category_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <!-- 商品属性集合-->
        <collection property="attributes" ofType="com.bianquan.springShop.modules.shop.entity.ProductAttributesEntity">
            <id property="id" column="id"/>
            <result property="productId" column="product_id"/>
            <result property="paramData" column="param_data"/>
        </collection>
        <!-- 商品详情集合-->
        <collection property="desc" ofType="com.bianquan.springShop.modules.shop.entity.ProductDescEntity">
            <id property="productId" column="product_id"/>
            <result property="productDesc" column="product_desc"/>
        </collection>
        <!-- 商品sku数据集合-->
        <collection property="sku"  column="product_id"
                    select="com.bianquan.springShop.modules.shop.dao.ProductsSkuDao.fetchListByProductId"
                    ofType="com.bianquan.springShop.modules.shop.entity.ProductsSkuEntity">
        </collection>
    </resultMap>



</mapper>