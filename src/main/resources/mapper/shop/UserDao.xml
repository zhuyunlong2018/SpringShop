<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bianquan.springShop.modules.shop.dao.UserDao">

    <insert id="save" parameterType="com.bianquan.springShop.modules.shop.entity.UserEntity" useGeneratedKeys="true" keyProperty="userId">
        insert into tb_user
        (
        `user_name`,
        `user_mobile`,
        `user_pwd`,
        `create_time`
        )
        values
        (
        #{userName},
        #{userMobile},
        #{userPwd},
        #{createTime}
        )
    </insert>

    <select id="queryObject" resultType="com.bianquan.springShop.modules.shop.entity.UserEntity">
        select * from tv_user where user_id = #{value}
    </select>

    <select id="queryByMobile" resultType="com.bianquan.springShop.modules.shop.entity.UserEntity">
        select * from tv_user where user_mobile = #{value}
    </select>

</mapper>